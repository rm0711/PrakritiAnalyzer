<Window x:Class="PrakritiAnalyzer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login / Register" Height="400" Width="400"
        Background="#F1F8E9">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="TitleText" Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- For placeholders in WPF, consider using a style or additional TextBlock overlays -->
            <TextBox x:Name="UsernameBox" Margin="0,0,0,10" Height="30" 
                     VerticalContentAlignment="Center"
                     ToolTip="Username or Email"/>

            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10" Height="30" 
                         VerticalContentAlignment="Center"
                         ToolTip="Password"/>

            <TextBox x:Name="EmailBox" Margin="0,0,0,10" Height="30" Visibility="Collapsed" 
                     VerticalContentAlignment="Center"
                     ToolTip="Email (Register Only)"/>

            <Button x:Name="PrimaryButton" Content="Login" Height="35" Margin="0,5" Background="#33A858" Foreground="White" Click="PrimaryButton_Click"/>
            <Button x:Name="SwitchButton" Content="Create Account" Height="35" Margin="0,5" Click="SwitchButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
