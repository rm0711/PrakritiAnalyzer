<Window x:Class="PrakritiAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prakriti Nature Analysis" Height="600" Width="800"
        Background="#E8F5E9">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Prakriti Nature Analysis"
                       FontSize="28" FontWeight="Bold"
                       Foreground="#27632A"
                       TextAlignment="Center" Margin="10"/>

            <Button Content="Analyze Prakriti"
                    Width="220" Height="45"
                    Margin="10"
                    Background="#33A858"
                    Foreground="White"
                    FontSize="16"
                    Click="Analyze_Click"/>

            <TextBlock Text="Experience the harmony of nature within you."
                       FontSize="14" Foreground="Gray"
                       TextAlignment="Center" Margin="10"/>
        </StackPanel>

        <!-- Top right panel -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
            <TextBlock x:Name="GreetingText" Text="" VerticalAlignment="Center"
               FontSize="14" FontWeight="SemiBold" Margin="0,0,10,0"/>
            <Button x:Name="LoginLogoutButton" Content="Login / Register" Width="120" Height="30"
            Click="LoginLogoutButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
